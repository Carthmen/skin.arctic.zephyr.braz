<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <variable name="GlobalSearchArt">
        <!--<value condition="!IsEmpty(ListItem.Property(Fanart))">$INFO[ListItem.Property(Fanart)]</value>-->
        <value>$INFO[ListItem.Thumb]</value>
    </variable>
    <variable name="GlobalSearchPoster">
        <value condition="Control.IsVisible(140)">DefaultVideo.png</value>
        <value>$INFO[Container(100).ListItem.Icon]</value>
    </variable>
    <variable name="GlobalSearchArtInfo">
        <value condition="!IsEmpty(Container(100).ListItem.Property(Fanart))">$INFO[Container(100).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(111) + !IsEmpty(Container(111).ListItem.Property(Fanart))">$INFO[Container(111).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(121) + !IsEmpty(Container(121).ListItem.Property(Fanart))">$INFO[Container(121).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(131) + !IsEmpty(Container(131).ListItem.Property(Fanart))">$INFO[Container(131).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(141) + !IsEmpty(Container(141).ListItem.Property(Fanart))">$INFO[Container(141).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(151) + !IsEmpty(Container(151).ListItem.Property(Fanart))">$INFO[Container(151).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(161) + !IsEmpty(Container(161).ListItem.Property(Fanart))">$INFO[Container(161).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(171) + !IsEmpty(Container(171).ListItem.Property(Fanart))">$INFO[Container(171).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(181) + !IsEmpty(Container(181).ListItem.Property(Fanart))">$INFO[Container(181).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(191) + !IsEmpty(Container(191).ListItem.Property(Fanart))">$INFO[Container(191).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(211) + !IsEmpty(Container(211).ListItem.Property(Fanart))">$INFO[Container(211).ListItem.Property(Fanart)]</value>
        <value condition="Control.HasFocus(221) + !IsEmpty(Container(221).ListItem.Property(Fanart))">$INFO[Container(221).ListItem.Property(Fanart)]</value>
        <value>common/black-back.png</value>
    </variable>
    <include name="GlobalSearchListItem">
        <control type="image">
            <width>100%</width>
            <height>100%</height>
            <texture border="10">common/nofocus-shadow10.png</texture>
        </control>
        <control type="image">
            <left>10</left>
            <top>10</top>
            <right>10</right>
            <bottom>10</bottom>
            <texture border="5" colordiffuse="Panel">common/box.png</texture>
        </control>
        <control type="label">
            <left>20</left>
            <right>20</right>
            <bottom>10</bottom>
            <height>50</height>
            <aligny>center</aligny>
            <font>Tiny</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>PanelWhite70</textcolor>
        </control>
        <control type="image">
            <left>20</left>
            <top>20</top>
            <right>20</right>
            <height>256</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="diffuse/wall.png" colordiffuse="ff181818">common/white.png</texture>
        </control>
        <control type="image">
            <left>20</left>
            <top>20</top>
            <right>20</right>
            <height>256</height>
            <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
            <texture diffuse="diffuse/wall.png" background="true">$VAR[GlobalSearchArt]</texture>
        </control>
    </include>
    <include name="GlobalSearchListFocus">
        <control type="image">
            <width>100%</width>
            <height>100%</height>
            <texture border="10">common/nofocus-shadow10.png</texture>
        </control>
        <control type="image">
            <left>10</left>
            <top>10</top>
            <right>10</right>
            <bottom>10</bottom>
            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
        </control>
        <control type="label">
            <left>20</left>
            <right>20</right>
            <bottom>10</bottom>
            <height>50</height>
            <aligny>center</aligny>
            <font>Tiny</font>
            <label>$INFO[ListItem.Label]</label>
            <selectedcolor>White100</selectedcolor>
            <textcolor>Selected</textcolor>
        </control>
        <control type="image">
            <left>20</left>
            <top>20</top>
            <right>20</right>
            <height>256</height>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="diffuse/wall.png" colordiffuse="ff181818">common/white.png</texture>
        </control>
        <control type="image">
            <left>20</left>
            <top>20</top>
            <right>20</right>
            <height>256</height>
            <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
            <texture diffuse="diffuse/wall.png" background="true">$VAR[GlobalSearchArt]</texture>
        </control>
    </include>
    <include name="GlobalSearchListGroupParams">
        <control type="group" id="$PARAM[groupid]">
            <height>330</height>
            <control type="group">
                <width>296</width>
                <control type="image">
                    <width>296</width>
                    <height>330</height>
                    <texture border="10">common/nofocus-shadow10.png</texture>
                </control>
                <control type="button" id="$PARAM[buttonid]">
                    <height>310</height>
                    <left>10</left>
                    <top>10</top>
                    <right>10</right>
                    <bottom>10</bottom>
                    <font>Mini</font>
                    <textoffsetx>10</textoffsetx>
                    <textcolor>White100</textcolor>
                    <focusedcolor>Selected</focusedcolor>
                    <onleft>9000</onleft>
                    <onright>$PARAM[listid]</onright>
                    <onup>$PARAM[onleft]</onup>
                    <ondown>$PARAM[onright]</ondown>
                    <onclick>Close</onclick>
                    <onclick>$PARAM[buttonclick]</onclick>
                    <label></label>
                    <texturenofocus border="5" colordiffuse="Panel">common/box.png</texturenofocus>
                    <texturefocus border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texturefocus>
                </control>
                <control type="label">
                    <left>20</left>
                    <right>20</right>
                    <bottom>10</bottom>
                    <height>50</height>
                    <aligny>center</aligny>
                    <font>Tiny</font>
                    <label>$INFO[Control.GetLabel($PARAM[labelid]),$PARAM[locallabel] (,)]</label>
                    <selectedcolor>White100</selectedcolor>
                    <textcolor>Selected</textcolor>
                </control>
                <control type="image">
                    <left>20</left>
                    <top>20</top>
                    <right>20</right>
                    <height>256</height>
                    <texture diffuse="diffuse/wall.png" colordiffuse="ff181818">common/white.png</texture>
                </control>
                <control type="image">
                    <left>20</left>
                    <top>20</top>
                    <right>20</right>
                    <height>256</height>
                    <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
                    <texture diffuse="diffuse/wall.png" background="true">$PARAM[iconimage]</texture>
                    <colordiffuse>PanelWhite70</colordiffuse>
                </control>
            </control>

            <control type="list" id="$PARAM[listid]">
                <top>0</top>
                <onleft>$PARAM[buttonid]</onleft>
                <onup>$PARAM[onleft]</onup>
                <ondown>$PARAM[onright]</ondown>
                <height>330</height>
                <left>296</left>
                <width>1480</width>
                <orientation>horizontal</orientation>
                <itemlayout height="330" width="296">
                    <include>GlobalSearchListItem</include>
                </itemlayout>
                <focusedlayout height="330" width="296">
                    <control type="group">
                        <visible>!Control.HasFocus($PARAM[listid])</visible>
                        <include>GlobalSearchListItem</include>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus($PARAM[listid])</visible>
                        <include>GlobalSearchListFocus</include>
                    </control>
                </focusedlayout>
            </control>
        
            <control type="image">
                <centertop>165</centertop>
                <centerright>5</centerright>
                <width>16</width>
                <height>16</height>
                <include>Animation.DelayFadeIn</include>
                <include>Animation.FadeOut</include>
                <visible>Control.HasFocus($PARAM[listid]) + IntegerGreaterThan(Container($PARAM[listid]).NumItems,4)</visible>
                <texture colordiffuse="Dark2" flipx="false">common/arrow-small-right.png</texture>
            </control>
        </control>

    </include>
    
    
   
</includes>
